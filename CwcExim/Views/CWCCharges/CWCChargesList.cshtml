@model IEnumerable<CwcExim.Models.CWCCharges>

<script>
    $(document).ready(function(){
        var TblCwcCharges=$('#TblCwcCharges').DataTable({
            "bFilter":false,
            "bInfo":false,
            "aoColumns":[
                {"sName":"SL No"},
                {"sName":"EffectiveDate"},
                {"sName":"ChargesType"},
                {"sName":"View","bSortable":false,"width":"10%"}
            ]
        });
        new $.fn.dataTable.FixedHeader(TblCwcCharges);
    });
    function ViewCWCCharges(CwcChargesId){
        $('#DivBody').load('/CWCCharges/ViewCWCCharges?CwcChargesId='+CwcChargesId);
    }
</script>
<table id="TblCwcCharges"class="table table-bordered table-striped nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align:center">@Html.DisplayName("SL No")</th>
            <th style="text-align:center">@Html.DisplayName("EffectiveDate")</th>
            <th style="text-align:center">@Html.DisplayNameFor(m=>m.ChargesType)</th>
            <th style="text-align:center">@Html.DisplayName("View")</th>
        </tr>
    </thead>
    <tbody>
        @{
            var SerialNo = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">@SerialNo</td>
                    <td style="text-align:center">@Html.DisplayFor(m => item.EffectiveDate)</td>
                    <td style="text-align:center">@Html.DisplayFor(m=>item.ChargesType)</td>
                    <td style="text-align:center"><a href="#" onclick="ViewCWCCharges(@item.CwcChargesId)"><i class="fa-search-plus Edit" aria-hidden="true"></i></a></td>
                </tr>
            }
            SerialNo = SerialNo + 1;
        }
    </tbody>
</table>
