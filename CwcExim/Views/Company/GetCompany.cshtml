@model CwcExim.Models.Company
@{
    AjaxOptions objAx = new AjaxOptions();
    objAx.Confirm = "Are you sure you want to save?";
    objAx.HttpMethod = "POST";
    objAx.InsertionMode = InsertionMode.InsertAfter;
    objAx.OnSuccess = "companyOnSuccess";
    objAx.OnFailure = "companyOnFailure";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-offset-0-5 col-md-11">
            <div class="Head_h4">
                @using (Ajax.BeginForm("AddCompanyDetails", "Company", objAx))
                {
                    @Html.AntiForgeryToken()
                    <div class="row SignUp_space_bottom">
                        <div class="col-md-12">
                            <h4>Company Creation</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group Form_Input">
                            <div class="col-md-2">
                                @Html.LabelFor(m=>m.CompanyName,new { @class="InputLabel"})<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-10">
                                <span class="ReQSimbol">*</span>
                                @Html.TextBoxFor(m=>m.CompanyName,new {@class="form-control input-sm" })
                                @Html.ValidationMessageFor(m=>m.CompanyName,"",new { @class="Error_Msg"})
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2" style="padding-right:0px;">
                                @Html.LabelFor(m=>m.CompanyShortName,new { @class="InputLabel"})<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m=>m.CompanyShortName,new { @class="form-control input-sm"})
                                @Html.ValidationMessageFor(m=>m.CompanyShortName,"",new {@class="Error_Msg" })
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2" style="padding-right:0px;">
                               <label>Company Address:</label>
                            </div>
                            <div class="col-md-10">
                                <span class="ReQSimbol">*</span>
                                @Html.TextAreaFor(m=>m.CompanyAddress,new {@style="width:100%;height:75px;"})
                                @Html.ValidationMessageFor(m=>m.CompanyAddress,"",new { @class="Error_Msg"})
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.PhoneNo, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m=>m.PhoneNo,new { @class="form-control input-sm"})
                                @Html.ValidationMessageFor(m=>m.PhoneNo,"",new { @class="Error_Msg"})
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.FaxNumber, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m=>m.FaxNumber,new { @class="form-control input-sm"})
                                @Html.ValidationMessageFor(m=>m.FaxNumber,"",new { @class="Error_Msg"})
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2">
                                @Html.LabelFor(m=>m.EmailAddress,new { @class="InputLabel"})<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                <span class="ReQSimbol">*</span>
                                @Html.TextBoxFor(m=>m.EmailAddress,new { @class="form-control input-sm"})
                                @Html.ValidationMessageFor(m=>m.EmailAddress,"",new { @class="Error_Msg"})
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.StateId)<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @if (ViewBag.StateId != null)
                                {
                                    @Html.DropDownList("StateId", new SelectList(ViewBag.StateId, "Value", "Text"), "---Select---", new { @onchange = "GetCityList()" })
                                }
                                else
                                {
                                    @Html.DropDownListFor(m => m.StateId, new SelectList("", "Value", "Text"), "---Select---", new { @class = "form-control input-sm dropdown" })
                                }
                            </div>
                            <div class="col-md-1 col-md-offset-1">
                                @Html.LabelFor(m => m.CityId, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.CityId, new SelectList("", "Value", "Text"), "---Select---", new { @class = "form-control input-sm dropdown" })
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.StateCode, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.StateCode, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(m => m.StateCode, "", new { @class = "Error_Msg" })
                            </div>
                        </div>
                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Pan, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Pan, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(m => m.Pan, "", new { @class = "Error_Msg" })
                            </div>
                            <div class="col-md-1 col-md-offset-1">
                                @Html.LabelFor(m => m.GstIn, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.GstIn, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(m => m.GstIn, "", new { @class = "Error_Msg" })
                            </div>
                        </div>
                    </div>
                    <div class="row SignUp_space_top SignUp_space_bottom">
                        <div class="stoke"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-4 col-md-2" style="text-align:center;">
                            <input type="submit" id="btnSubmit" value="Save" class="btn log_Btn_sm" />
                        </div>
                        <div class="col-md-2" style="text-align:center">
                            <input type="button" id="btnReset" value="Reset" class="btn log_Btn_sm" onclick="ClearData()" />
                        </div>
                    </div>
                    <div class="logSuccMsg Form_Space_top SignUp_space_bottom2" style="text-align:center;background-color:transparent;" id="divMsg"></div>
                }
                @Scripts.Render("~/bundles/jqueryval")
               
                <div class="row">
                    <div class="col-md-12 SignUp_space_bottom">
                        <div id="DivCompanyList">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        LoadCompanyList();
    });
    function LoadCompanyList() {
        $('#DivCompanyList').load('/Company/GetCompanyList');
    }
    function ClearData() {
        $('#CompanyName').val('');
        $('#CompanyShortName').val('');
        $('#CompanyAddress').val('');
        $('#PhoneNo').val('');
        $('#StateId').val('');
        ClearCityDropdown();
        $('#StateCode').val('');
        $('#GstIn').val('');
        $('#Pan').val('');
        $('#FaxNumber').val('');
        $('#EmailAddress').val('');
        $('[data-valmsg-for]').html('');
        $('[data-valmsg-for="CompanyName"]').html('');
        $('[data-valmsg-for="CompanyShortName"]').html('');
        $('[data-valmsg-for="CompanyAddress"]').html('');
        $('[data-valmsg-for="PhoneNo"]').html('');
        $('[data-valmsg-for="FaxNumber"]').html('');
        $('[data-valmsg-for="EmailAddress"]').html('');
        $('#DivMsg').html('');
    }
    function companyOnSuccess(data) {
        debugger;
        if (data.Status == 1) {
            if ($('#divMsg').hasClass('logErrMsg'))
                $('#divMsg').removeClass('logErrMsg').addClass('logSuccMsg');
            $('#divMsg').html(data.Message);
            LoadCompanyList();
            setTimeout(ClearData(), 5000);
        }
        else {
            if ($('#divMsg').hasClass('logSuccMsg'))
                $('#divMsg').removeClass('logSuccMsg').addClass('logErrMsg');
            $('#divMsg').html(data.Message);
            setTimeout(function () { $('#divMsg').html(''); }, 5000);
        }
    }
    function companyOnFailure() { }
    function GetCityList() {
        debugger;
        debugger;
        var StateId = $('#StateId').val();
        ClearCityDropdown();
        if (StateId != "") {
            $.ajax({
                url: '/City/GetCitiesByState',
                type: 'Get',
                data: { StateId: StateId },
                async: false,
                success: function (data) {
                    debugger;
                    if (data.Status == 1) {
                        ClearCityDropdown();
                        $.each(data.Data, function (i, item) {
                            debugger;
                            $('#CityId').append($('<option></option>').val(item.CityId).html(item.CityName));
                        });
                    }
                    else {
                        ClearCityDropdown();
                    }
                }
            });
        }
        else {
            ClearCityDropdown();
        }
    }
    function ClearCityDropdown() {
        $('#CityId').html("");
        $('#CityId').append($('<option></option>').val("").html("---Select---"));
    }
</script>


