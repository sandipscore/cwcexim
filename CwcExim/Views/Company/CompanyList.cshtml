@model IEnumerable<CwcExim.Models.Company>

<script>
    $(document).ready(function () {
        var TblCompany = $('#TblCompany').DataTable({
            "bFilter": false,
            "bInfo":false,
            "aoColumns": [
                { "sName": "Serial No","width": "8%"},
                { "sName": "Company Name" },
                { "sName": "Company Address", "bSortable": false },
                { "sName": "Phone No", "bSortable": false },
                { "sName": "Fax Number", "bSortable": false },
                { "sName": "Email Address","bSortable":false }
            ],
        });
        new $.fn.dataTable.FixedHeader(TblCompany);
    });
</script>

<table id="TblCompany"class="table table-bordered table-striped nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align:center">@Html.DisplayName("SL No")</th>
            <th>@Html.DisplayNameFor(m=>m.CompanyName)</th>
            <th>@Html.DisplayNameFor(m=>m.CompanyAddress)</th>
            <th>@Html.DisplayNameFor(m=>m.PhoneNo)</th>
            <th>@Html.DisplayNameFor(m=>m.FaxNumber)</th>
            <th>@Html.DisplayNameFor(m=>m.EmailAddress)</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            var SerialNo = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">@SerialNo</td>
                    <td>@Html.DisplayFor(m=>item.CompanyName)</td>
                    <td>@Html.DisplayFor(m=>item.CompanyAddress)</td>
                    <td>@Html.DisplayFor(m=>item.PhoneNo)</td>
                    <td>@Html.DisplayFor(m=>item.FaxNumber)</td>
                    <td>@Html.DisplayFor(m=>item.EmailAddress)</td>
                </tr>
                SerialNo = SerialNo + 1;
            }
        }
    </tbody>
</table>