@model IEnumerable<CwcExim.Models.RoleMaster>

@*@{
    ViewBag.Title = "GetAllRoles";
    Layout = null;
}*@

<div>
    <script type="text/javascript">
    function LoadEditView(RoleId) {

        $('#DivBody').load('/RoleMaster/EditRole?id=' + RoleId);

    }
    </script>
    <script>
        $(document).ready(function () {
            var table = $('#DivTblRoleList').DataTable({
                "bFilter": false,
                "bInfo": false,
                "aoColumns": [
                        { "sName": "Action", "bSortable": false, "width": "10%" },
                        {
                            "sName": "RoleId",
                            "width": "10%"
                        },
                        { "sName": "Role" },
                        { "sName": "Created On","bSortable": false, "width": "15%" }
                        
                ]
                //responsive: true
            });

            new $.fn.dataTable.FixedHeader(table);
        });

    </script>
    <table id="DivTblRoleList" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th style="text-align:center;">@Html.DisplayName("Action")</th>
                <th style="text-align:center;">@Html.DisplayNameFor(model => model.RoleId)</th>
                <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                <th style="text-align:center;">@Html.DisplayNameFor(model => model.CreatedOn)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center;"><div class="table_icon"><a href="#" onclick="LoadEditView(@item.RoleId)"><i class="fa fa-pencil" aria-hidden="true"></i></a></div></td>
                    <td style="text-align:center;">@Html.DisplayFor(modelItem => item.RoleId)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                    <td style="text-align:center;">@Html.DisplayFor(modelItem => item.CreatedOn)</td>
                </tr>
            }
        </tbody>
    </table>
</div>