@model IEnumerable<CwcExim.Models.Bank>
<script>
    $(document).ready(function(){
        var TblBank=$('#TblBank').DataTable({
            "bFilter":false,
            "bInfo":false,
            "pageLength": 50,
            "aoColumns":[
                {"sName":"View","bSortable":false,"width":"3%"},
                {"sName":"Sl No","width":"8%"},
                {"sName":"A/C No","bSortable":false},
                {"sName":"Bank"},
                {"sName":"E-mail"},

            ]
        });
        new $.fn.dataTable.FixedHeader(TblBank);
    });
    function ViewBank(BankId){
        $('#DivBody').load( '/Bank/ViewBank?BankId='+BankId);
    }
</script>
<table id="TblBank" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align:center">@Html.DisplayName("View")</th>
            <th style="text-align:center">@Html.DisplayName("Sl No")</th>
            <th>@Html.DisplayName("A/C No")</th>
            <th>@Html.DisplayName("Bank")</th>
            <th>@Html.DisplayName("E-mail Id")</th>
        </tr>
    </thead>
    <tbody>
        @{
            var SerialNo = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center"><div class="table_icon"><a href="#" onclick="ViewBank(@item.BankId)"><i class="fa fa-eye"></i></a></div></td>
                    <td style="text-align:center">@SerialNo</td>
                    <td>@Html.DisplayFor(m => item.AccountNo)</td>
                    <td>@Html.DisplayFor(m => item.BankName)</td>
                    <td>@Html.DisplayFor(m => item.Email)</td>
                </tr>
                SerialNo = SerialNo + 1;
            }
        }
    </tbody>
</table>
