@model CwcExim.Areas.Master.Models.HDBOperation

<script>
    function LoadOperationPage() {
        $('#DivBody').load('/Master/HDBMaster/CreateOperation');
    }
</script>
<div id="DivOperation" class="container-fluid">
    <div class="row">
        <div class="col-md-offset-0-5 col-md-11">
            <div class="Head_h4">
                <div class="row SignUp_space_bottom">
                    <div class="col-md-12">
                        <h4>Operation Master</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group Form_Input">
                        <div class="col-md-1-5 col_cus_2">
                            @Html.LabelFor(m => m.Type, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                        </div>
                        <div class="col-md-2 col_cus_2_5">
                            @if (Model.Type == 1)
                            {
                                @Html.DropDownListFor(m => m.Type, new List<SelectListItem> { new SelectListItem { Value = "1", Text = "Import" } }, new { @class = "form-control input-sm dropdown", @disabled = "disabled" })
                            }
                            else if (Model.Type == 2)
                            {
                                @Html.DropDownListFor(m => m.Type, new List<SelectListItem> { new SelectListItem { Value = "2", Text = "Export" } }, "---Select---", new { @class = "form-control input-sm dropdown", @disabled = "disabled" })
                            }
                            else if (Model.Type == 3)
                            {
                                @Html.DropDownListFor(m => m.Type, new List<SelectListItem> { new SelectListItem { Value = "3", Text = "General" } }, "---Select---", new { @class = "form-control input-sm dropdown", @disabled = "disabled" })
                            }
                            else if (Model.Type == 4)
                            {
                                @Html.DropDownListFor(m => m.Type, new List<SelectListItem> { new SelectListItem { Value = "4", Text = "Import (RMS)" } }, new { @class = "form-control input-sm dropdown", @disabled = "disabled" })
                            }
                            else if (Model.Type == 5)
                            {
                                @Html.DropDownListFor(m => m.Type, new List<SelectListItem> { new SelectListItem { Value = "5", Text = "Import (Non RMS)" } }, new { @class = "form-control input-sm dropdown", @disabled = "disabled" })
                            }
                        </div>
                    </div>
                </div>
                <div class="row Form_Space_top">
                    <div class="form-group Form_Input">
                        <div class="col-md-1-5 col_cus_2">
                            @*Code is actually refering to Clause*@
                            @Html.LabelFor(m => m.Code, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                        </div>
                        <div class="col-md-2 col_cus_2_5">
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control input-sm", @readonly = "readonly" })
                        </div>
                        <div class="col-md-1">
                            @Html.LabelFor(m => m.SacCode, new { @class = "InputLabel" })<span class="LabelColon">:</span>
                        </div>
                        <div class="col-md-2 col_cus_2_5">
                            @Html.TextBoxFor(m => m.SacCode, "", new { @class = "form-control input-sm", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
                <div class="row Form_Space_top">
                    <div class="form-group Form_Input">
                        <div class="col-md-1-5 col_cus_2 padding_rt">
                            <label>Short Description:</label>
                        </div>
                        <div class="col-md-10-5 col_cus_10">
                            @Html.TextBoxFor(m => m.ShortDescription, new { @class = "form-control input-sm", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
                <div class="row Form_Space_top">
                    <div class="form-group Form_Input">
                        <div class="col-md-1-5 col_cus_2">
                            <label>Description:</label>
                        </div>
                        <div class="col-md-10-5 col_cus_10">
                            @Html.TextAreaFor(m => m.Description, new { @style = "width:100%;height:75px;", @disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="stoke SignUp_space_bottom SignUp_space_top"></div>
                </div>
                <div class="row SignUp_space_bottom">
                    <div class="col-md-offset-5 col-md-2" style="text-align:center">
                        <input type="button" class="btn log_Btn_sm" value="Back" onclick="LoadOperationPage()" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

