@model IEnumerable<CwcExim.Areas.Master.Models.DSRExpenseCodeWiseHSN>
   
 <script>     

     $(document).ready(function () {
         var TblExpHSN = $('#TblExpHSN').DataTable({
             "bFilter": false,
             "bInfo": false,
             "pageLength": 50,
             "aoColumns": [
                        { "sName": "SL No", "width": "8%" },
                        { "sName": "Expense Code" },
                        { "sName": "HSN Code" },
                        { "sName": "Edit", "bSortable": false, "width": "10%" }
             ]
         });
         new $.fn.dataTable.FixedHeader(TblExpHSN);
     });
     
     function EditExpHSN(ExpHSNId){
         $('#DivCreateExpHSN').load('/Master/DSRExpenseHead/EditExpHSN?ExpHSNId='+ExpHSNId);

     }

    
 </script>
<table id="TblExpHSN" class="table table-striped table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">@Html.DisplayName("SL No")</th>
            <th>@Html.DisplayName("Expense Code")</th>
            <th>@Html.DisplayName("HSN Code")</th>
            <th>@Html.DisplayName("Edit")</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            var SerialNo = 1;
            foreach(var item in Model)
            {
                <tr>
                    <td class="text-center">@SerialNo.</td>
                    <td>@item.ExpenseCode</td>
                    <td>@item.HSNCode</td>
                    <td style="text-align:center"><a href="#" onclick="EditExpHSN(@item.ExpHSNId)"><i class="fa fa-pencil-square Edit" aria-hidden="true"></i></a></td>

                </tr>
                SerialNo = SerialNo + 1;
            }
        }
    </tbody>
</table>