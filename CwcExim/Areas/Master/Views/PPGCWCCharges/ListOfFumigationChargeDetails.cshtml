@model IEnumerable<CwcExim.Areas.Master.Models.PpgFumigationCharge>
<table id="tblChargeList" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align:center;">@Html.DisplayName("Edit")</th>
            <th style="text-align:center;">@Html.DisplayName("SL No")</th>
            <th>@Html.DisplayNameFor(m=>m.EffectiveDate)</th>
            <th>@Html.DisplayNameFor(m => m.ChargesFor)</th>
            <th>@Html.DisplayNameFor(m =>m.ContainerSize)</th>
            <th>@Html.DisplayNameFor(m => m.FromWeight)</th>
            <th>@Html.DisplayNameFor(m => m.ToWeight)</th>
            <th>@Html.DisplayNameFor(m => m.Rate)</th>            
        </tr>
    </thead>

    <tbody>
        @{
            var SerialNo = 1;
            foreach (var elem in Model)
            {
                <tr>
                    <td style="text-align:center;"><div class="table_icon"><a href="#" onclick="EditChargeDetails(@elem.FumigationChargeId,'@elem.Type')"><i class="fa fa-pencil"></i></a></div></td>
                    <td style="text-align:center;">@SerialNo.ToString()</td>
                    <td>@elem.EffectiveDate</td>
                    <td>@elem.ChargesFor</td>
                    <td>@elem.ContainerSize</td>
                    <td>@elem.FromWeight</td>
                    <td>@elem.ToWeight</td>
                    <td>@elem.Rate</td>                    
                </tr>
                SerialNo = SerialNo + 1;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var TblChargeEntry = $('#tblChargeList').DataTable({
            "bFilter": false,
            "bInfo": false,
            "pageLength": 50,
            "aoColumns": [
                { "sName": "SL No" },
                { "sName": "EffectiveDate"},
                { "sName": "Charges For" },
                { "sName": "Size" },
                { "sName": "Weight From" },
                { "sName": "Weight To" },
                { "sName": "Rate" },
                { "sName": "Edit", "bSortable": false, "width": "10%" },
            ]
        });
        new $.fn.dataTable.FixedHeader(TblChargeEntry);
    });

    function EditChargeDetails(FumigationChargeId, Type) {
        debugger;
        if(Type=="Cargo")
        {
            $('#DivAddFumigationCharge').load('/Master/PPGCWCCharges/EditFumigationChargeForCargo?FumigationChargeId=' + FumigationChargeId);
        }
        if(Type=="Container")
        {
            $('#DivAddFumigationCharge').load('/Master/PPGCWCCharges/EditFumigationChargeForContainer?FumigationChargeId=' + FumigationChargeId);
        }

    }

</script>

