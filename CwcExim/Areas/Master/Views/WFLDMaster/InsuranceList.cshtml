@model IEnumerable<CwcExim.Areas.Master.Models.WFLDInsurance>
<table id="tblIncuranceList" width="100%" class="table table-striped table-bordered nowrap">
    <thead>
        <tr>
            <th style="text-align:center;">@Html.DisplayName("SL No")</th>
            <th style="text-align:center;">@Html.DisplayNameFor(m => m.EffectiveDate)</th>
            <th style="text-align:center;">@Html.DisplayNameFor(m => m.Charge)</th>
            <th style="text-align:center;">@Html.DisplayNameFor(m => m.SacCode)</th>
            <th style="text-align:center;">@Html.DisplayName("Edit")</th>
        </tr>
    </thead>
    <tbody>
        @{
            var Serial = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center;">@Serial.ToString()</td>
                    <td style="text-align:center;">@item.EffectiveDate</td>
                    <td style="text-align:center;">@item.Charge</td>
                    <td style="text-align:center;">@item.SacCode</td>
                    <td style="text-align:center;"><a href="#" onclick="EditInsurance(@item.InsuranceId)"><i class="fa fa-pencil-square Edit"></i></a></td>
                </tr>
                Serial++;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var tblIncuranceList = $('#tblIncuranceList').DataTable({
            "bFilter": false,
            "bInfo": false,
            "pageLength": 50,
            "aoColumns": [
                { "sName": "SL No", "width": "10%" },
                { "sName": "Efective Date", "bSortable": false },
                { "sName": "Charge" },
                { "sName": "Sac Code", "bSortable": false },
                { "sName": "Edit", "bSortable": false, "width": "10%" }
            ]
        });
        new $.fn.dataTable.FixedHeader(tblIncuranceList);
    });
    function EditInsurance(InsuranceId) {
        $('#DivInsurance').load('/Master/WFLDMaster/EditInsurance?InsuranceId=' + InsuranceId);
    }
</script>
