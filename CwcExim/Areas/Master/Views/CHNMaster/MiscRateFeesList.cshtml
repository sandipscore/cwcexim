@model IEnumerable<CwcExim.Areas.Master.Models.CHNStorageCharge>

<table class="table table-bordered table-striped" id="tblRateFeesList" style="width:100%;">
    <thead>
        <tr>
            <th style="text-align:center;">@Html.DisplayName("SL No")</th>
            <th>@Html.DisplayName("Effective Date")</th>
            <th>@Html.DisplayNameFor(m => m.ChargeName)</th>
            <th>@Html.DisplayNameFor(m => m.SacCode)</th>
            <th>@Html.DisplayNameFor(m => m.OperationType)</th>            
            <th>@Html.DisplayNameFor(m => m.ContainerType)</th>
            <th>@Html.DisplayNameFor(m => m.ContainerLoadType)</th>
            <th>@Html.DisplayNameFor(m => m.Size)</th>
            <th>@Html.DisplayNameFor(m => m.Rate)</th>
            <th>@Html.DisplayNameFor(m => m.CartingType)</th>
            <th style="text-align:center;">@Html.DisplayName("Edit")</th>
        </tr>
    </thead>
    <tbody>
        @{ var Serial = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center;">@Serial.ToString()</td>
                    <td>@item.EffectiveDate</td>
                    <td>@item.ChargeName</td>
                    <td>@item.SacCode</td>
                    <td>@item.OperationType</td>
                    <td>@item.ContainerType</td>
                    <td>@item.ContainerLoadType</td>
                    <td>@item.Size</td>
                    <td>@item.Rate</td>
                    <td>@item.CartingType</td>
                    <td style="text-align:center;"><a href="#" onclick="EditMiscRateFees(@item.StorageChargeId)"><i class="fa fa-pencil-square Edit"></i></a></td>
                </tr>
                Serial++;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var tblEntryFeesList = $('#tblRateFeesList').DataTable({
            "bFilter": false,
            "bInfo": false,
            "pageLength": 50,
            "aoColumns": [
                    { "sName": "SL No", "width": "10%" },
                    { "sName": "Effective Date", "bSortable": false },
                    { "sName": "Charge Name", },
                    { "sName": "Sac Code", },
                    { "sName": "Operation Type" },
                    { "sName": "Container Type", },
                    { "sName": "Container Load Type" },
                    { "sName": "Container Size", },                    
                    { "sName": "Rate" },
                    { "sName": "Carting Type" },
                    { "sName": "Edit", "bSortable": false, "width": "10%" }
            ]
        });
        new $.fn.dataTable.FixedHeader(tblEntryFeesList);
    });
    function EditMiscRateFees(StorageChargeId) {
        $('#DivMiscellaneous').load('/Master/CHNMaster/EditMiscRateFees?StorageChargeId=' + StorageChargeId);
    }
</script>