@model IEnumerable<CwcExim.Areas.Master.Models.PPGSac>
<table id="tblSACList" class="table table-bordered ">
    <thead>
        <tr>
            <th style="text-align:center;">@Html.DisplayName("Action")</th>
            <th style="text-align:center;">@Html.DisplayName("SL No")</th>
            <th>@Html.DisplayName("SAC Code")</th>
            <th>@Html.DisplayNameFor(m => m.GST)</th>
            <th>@Html.DisplayNameFor(m => m.CESS)</th>            
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center;"><div class="table_icon"><a href="#" onclick="ViewSAC(@item.SACId)"><i class="fa fa-eye"></i></a></div></td>
                    <td style="text-align:center;">@i.ToString()</td>
                    <td>@item.SACCode</td>
                    <td>@item.GST</td>
                    <td>@item.CESS</td>                    
                </tr>
                i++;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function(){
        var tblSACList= $('#tblSACList').DataTable({
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                    { "sName": "View", "bSortable": false, "width": "3%" },
                    { "sName": "SL No" ,"width": "10%"},
                    { "sName": "SAC Code" },
                    { "sName": "GST%", "bSortable": false,"width": "20%" },
                    { "sName": "CESS%", "bSortable": false,"width": "20%" },                   
            ]
        });
        new $.fn.dataTable.FixedHeader(tblSACList);
    });
    function ViewSAC(SACId)
    {
        $('#DivBody').load('/Master/PPGSac/ViewSAC?SACId='+SACId);
    }
</script>
