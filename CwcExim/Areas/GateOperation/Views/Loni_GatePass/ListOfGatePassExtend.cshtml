

 @model IEnumerable<CwcExim.Areas.GateOperation.Models.Ppg_RevalidateGatePass>

<script>
        $(document).ready(function(){
            var tblGP = $('#tblGP').DataTable({
                "bFilter": false,
                "bInfo": false,
                "pageLength": 50,
                "aoColumns": [
                      { "sName": "SL No", "width": "8%" },
                        { "sName": "Gate Pass No", "width": "10%" },
                        { "sName": "Gate Pass Date", "width": "10%" },
                        { "sName": "Old Validity Date", "bSortable": false, "width": "10%" },
                        { "sName": "New Validity Date", "bSortable": false, "width": "10%" }
                        
                ]
            });
            new $.fn.dataTable.FixedHeader(tblGP);
        });

</script>
<table id="tblGP" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align:center">@Html.DisplayName("SL No")</th>
            
            <th style="text-align:center">Gate Pass No</th>
            <th style="text-align:center">Gate Pass Date</th>
            <th style="text-align:center">Old Validity Date</th>
            <th style="text-align:center">New Validity Date</th>
           
        </tr>
    </thead>
    <tbody>
        @{
            var SerialNo = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">@SerialNo</td>                    
                    <td>@Html.DisplayFor(m => item.GatePassNo)</td>
                    <td>@Html.DisplayFor(m => item.GatePassDate)</td>
                    <td>@Html.DisplayFor(m => item.ExpiryDT)</td>
                    <td>@Html.DisplayFor(m => item.ExtendDT)</td>                   
                </tr>
                SerialNo = SerialNo + 1;
            }
        }
    </tbody>
</table>

