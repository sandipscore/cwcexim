@model IEnumerable<CwcExim.Areas.Pest.Models.ChemicalStockIn>
<script>
        $(document).ready(function(){
            var TblGodown=$('#TblGodown').DataTable({
                "bFilter":false,
                "bInfo":false,
                "pageLength": 50,
                "aoColumns":[
                           {"sName":"SL No","width":"8%"},
                           {"sName":"Date"},
                           {"sName":"Chemical Name"},
                           {"sName":"Quantity"},
                           {"sName":"View","bSortable":false,"width":"10%"},
                           {"sName":"Edit","bSortable":false,"width":"10%"},
                          ]
            });
            new $.fn.dataTable.FixedHeader(TblGodown);
        });
        function LoadGodownPage(){
            $('#DivBody').load('/Pest/Pest/CreateChemicalStockIn');
        }
        function ViewChemicalStockIn(ChemicalStockId){
            $('#DivBody').load('/Pest/Pest/ViewChemicalStockIn?ChemicalStockId='+ChemicalStockId);
        }
        function EditChemicalStockIn(ChemicalStockId){
            $('#DivBody').load('/Pest/Pest/EditChemicalStockIn?ChemicalStockId='+ChemicalStockId);
        }

</script>
<table id="TblGodown" class="table table-bordered table-striped nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align:center">@Html.DisplayName("SL No")</th>
            <th>@Html.DisplayName("Date")</th>
            <th>@Html.DisplayName("Chemical Name")</th>
            <th>@Html.DisplayName("Quantity")</th>
            <th style="text-align:center">@Html.DisplayName("View")</th>
            <th style="text-align:center">@Html.DisplayName("Edit")</th>

        </tr>
    </thead>
    <tbody>
        @{
            var SerialNo = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">@SerialNo</td>
                    <td>@Html.DisplayFor(m => item.Date)</td>
                    <td>@Html.DisplayFor(m => item.ChemicalName)</td>
                    <td>@Html.DisplayFor(m => item.Quantity)</td>
                    <td style="text-align:center"><a href="#" onclick="ViewChemicalStockIn(@item.ChemicalStockId)"><i class="fa fa-search-plus Edit" aria-hidden="true"></i></a></td>
                    <td style="text-align:center"><a href="#" onclick="EditChemicalStockIn(@item.ChemicalStockId)"><i class="fa fa-pencil-square Edit"></i></a></td>
                </tr>
                SerialNo = SerialNo + 1;
            }
        }
    </tbody>
</table>


