@Scripts.Render("~/bundles/jqueryval")
<script>
    var ArrayJODetails = [];
    $(function () {
      
        SerializedData = @Html.Raw(Json.Encode(Model.StringifyXML));
        if(SerializedData!=null)
        {
            ArrayJODetails=$.parseJSON(SerializedData);
            GenerateTable();
        }
        else
        {
            $('#tblJODet').show();
        }
    });
    $('#JobOrderDate,#ReferenceDate,#PickUpRefDate').datepicker({
        dateFormat: "dd/mm/yy",
        showOn: "button",
        buttonImage: "/Content/images/calendar.png",
        buttonImageOnly: true,
        buttonText: "Select date",
        changeMonth: true,
        changeYear: true,
        showAnima: "fadein",
        onClose: function () {
        }
    });
    $('#CHAbox').keyup(function () {
        var val = $(this).val().toLowerCase();
        if (val == "")
            $('#lstCHA > li').show();
        else {
            $('#lstCHA > li').each(function () {
                var text = $(this).text().toLowerCase();
                (text.indexOf(val) >= 0 ? $(this).show() : $(this).hide());
            });
        }
    });
    $('#lstCHA > li').on("click", function () {
        $('#CHAName').val($(this).text());
        $('#CHAId').val($(this).attr('id'));
        $("#CHAModal").modal("hide");
    });
    $('#ShippingLinebox').keyup(function () {
        var val = $(this).val().toLowerCase();
        if (val == "")
            $('#lstShippingLine > li').show();
        else {
            $('#lstShippingLine > li').each(function () {
                var text = $(this).text().toLowerCase();
                (text.indexOf(val) >= 0 ? $(this).show() : $(this).hide());
            });
        }
    });
    $('#lstShippingLine > li').on("click", function () {
        $('#ShippingLineName').val($(this).text());
        $('#ShippingLineId').val($(this).attr('id'));
        $("#ShippingLineModal").modal("hide");
    });
    function JobOrderOnSuccess(data)
    {
        if (data.Status == 2)
        {
            LoadCreateJobOrder();
        }
        else {
            $('#DivErrMsg').html(data.Message);
        }
        setTimeout(function () { $('#DivErrMsg').html(''); }, 5000);
    }
    function JobOrderOnFailure() { }
    function ResetAllField() {
        ArrayJODetails = []
        $('#tblJODet tbody').html('');
        $('#tblJODet').hide();
        $('#DivJOHdr input[type="text"]').val('');
        $('#JobOrderDate').val('@Model.JobOrderDate');
        $('textarea').val('');
        ResetJODet();
    }
    function ResetJODet() {
        $('#ContainerNo,#ContainerSize').val('');
        $('#Reefer').prop("checked", false);
        //Add on 25Jan/18
        GenerateTable();
        //Add on 25Jan/18
    }
    function AddJODet() {
        debugger
        if (ValidateJODet()) {
            var JODetails = {
                // "JobOrderDtlId": ($('#JobOrderDtlId').val()==''?0:$('#JobOrderDtlId').val()),
                "JobOrderId":parseInt($('#ImpJobOrderId').val()),
                "ContainerNo": $('#ContainerNo').val(),
                "ContainerSize": $('#ContainerSize').val(),
                "Reefer": ($('#Reefer').prop('checked') ? 1 : 0)
            };
            ArrayJODetails.push(JODetails);
            GenerateTable();
            ResetJODet();
        }
    }
    function ValidateJODet()
    {
        var Result = true;
        if ($('#ContainerNo').val() == '') {
            $('[data-valmsg-for="ContainerNo"]').html('<span>Fill Out This Field</span>');
            Result = false;
        }
        if ($('#ContainerSize').val() == '') {
            $('[data-valmsg-for="ContainerSize"]').html('<span>Fill Out This Field</span>');
            Result = false;
        }
        //Add on 25 Jan/19
        var ContainerAdd = $.trim($("#ContainerNo").val());
        var tblJODetItem = document.getElementById('tblJODet');
        var ContainerExist;
        for (var i = 1; i < tblJODetItem.rows.length; i++) {
            ContainerExist = $.trim(tblJODetItem.rows[i].cells[1].innerHTML);
            if (ContainerAdd == ContainerExist) {
                alert('Container ' + ContainerAdd + " Already Exists");
                Result = false;
            }
        }
        //Add on 25 Jan/19

        return Result;
    }
    function GenerateTable()
    {
        var html = '';
        $.each(ArrayJODetails, function (i, item) {
            
            //html += '<tr><td class="text-center">' + (i + 1) + '</td><td>' + item.ContainerNo + '</td><td>' + item.ContainerSize + '</td><td>' + item.Reefer + '</td><td class="text-center"><a href="#" onclick="EditJODet(' + i + ')"><i class="fa fa-pencil-square Edit"></i></a></td></tr>';
            html += '<tr><td class="text-center">' + (i + 1) + '</td><td>' + item.ContainerNo + '</td><td>' + item.ContainerSize + '</td><td>' + ((item.Reefer == 1) ? "Reefer" : "Non Reefer") + '</td><td class="text-center"><a href="#" onclick="EditJODet(' + i + ')"><i class="fa fa-pencil-square Edit"></i></a></td></tr>';

        });
        $('#tblJODet tbody').html(html);
        $('#tblJODet').show();
    }
    function EditJODet(i)
    {
        debugger;
       // $('#JobOrderDtlId').val(ArrayJODetails[i].JobOrderDtlId);
        $('#ContainerNo').val(ArrayJODetails[i].ContainerNo);
        $('#ContainerSize').val(ArrayJODetails[i].ContainerSize),
                ArrayJODetails[i].Reefer == '1' ? $('#Reefer').prop('checked', true) : $('#Reefer').prop('checked', false);
        //ArrayJODetails[i].Reefer == 'Reefer' ? $('#Reefer').prop('checked', true) : $('#Reefer').prop('checked', false);
        ArrayJODetails.splice(i, 1);
        GenerateTable();

        //Add on 25 Jan/19
        var ContainerAdd = $("#ContainerNo").val();
        var tblJODetItem = document.getElementById('tblJODet');
        var ContainerExist;
        for (var i = 0; i < tblJODetItem.rows.length; i++) {
            $("#tblJODet>tbody:eq(0) tr:eq(" + i + ") td:eq(4)").children("a").removeAttr("onclick");
        }
        //Add on 25 Jan/19


    }
    $('#btnSave').on("click", function () {
        var length=$('#tblJODet>tbody>tr').length;
        if (length!=null && length>0)
            $('#StringifyXML').val(JSON.stringify(ArrayJODetails));
    });
    function LoadCreateJobOrder()
    {
        $('#DivBody').load( '/Import/Kdl_CWCImport/CreateEmptyContainerJobOrder');
    }
</script>
