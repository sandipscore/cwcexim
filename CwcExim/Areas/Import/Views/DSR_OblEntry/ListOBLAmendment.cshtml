@model IEnumerable<CwcExim.Areas.Import.Models.DSROBLAmendment>
<table class="table table-striped table-bordered" id="tblOBLAmendmentDtl" style="width:100%;">
    <thead>
        <tr>
            <th style="width:10px" rowspan='2' class="text-center">@Html.DisplayName("SL No")</th> 
            <th style="width:30px" rowspan='2' class="text-center">@Html.DisplayName("Date")</th>          
            <th style="width:300px" colspan='3' class="text-center">OLD</th>
            <th style="width:300px" colspan='3' class="text-center">NEW</th>           
        </tr>
        <tr>
            <th style="width:100px">OBL No</th>
            <th style="width:100px">Package</th>
            <th style="width:100px">Weight</th>
            <th style="width:100px">OBL No</th>
            <th style="width:100px">Package</th>
            <th style="border-right-width: 1px;width:100px;">Weight</th>           
        </tr>
    </thead>
    <tbody>
        @{ var SerialNo = 1;
            foreach (var data in Model)
            {
                <tr>
                    <td style="width:10px" class="text-center">@SerialNo.ToString()</td>
                    <td style="width:30px" class="text-center">@data.AmendmentDate</td>
                    <td style="width:100px">@data.OldOBLNo</td>
                    <td style="width:100px">@data.OldNoOfPkg</td>
                    <td style="width:100px">@data.OldGRWT</td>
                    
                    <td style="width:100px">@data.NewOBLNo</td>
                    <td style="width:100px">@data.NewNoOfPkg</td>
                    <td style="width:100px">@data.NewGRWT</td>                   
                </tr>
                SerialNo++;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var tblOBLAmendmentDtl = $('#tblOBLAmendmentDtl').DataTable({
            "autoWidth": false,
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                       { "sName": "SL No", "width": "10px" },
                       { "sName": "Date", "bSortable": false, "width": "30px" },
                       { "sName": "OBL No", "bSortable": false, "width": "100px" },
                       { "sName": "Package", "bSortable": false, "width": "100px" },
                       { "sName": "Weight", "bSortable": false, "width": "100px" },
                       { "sName": "OBL No", "bSortable": false, "width": "100px" },
                       { "sName": "Package", "bSortable": false, "width": "100px" },
                       { "sName": "Weight", "bSortable": false, "width": "100px" },
                       //{ "sName": "View", "bSortable": false, "width": "10px" },
                       // { "sName": "Delete", "bSortable": false, "width": "10px" },

            ],
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $('td:eq(0)', nRow).css("width", "10px");
                $('td:eq(1)', nRow).css("width", "30px");
                $('td:eq(2)', nRow).css("width", "100px");
                $('td:eq(3)', nRow).css("width", "80px");
                $('td:eq(4)', nRow).css("width", "100px");
                $('td:eq(5)', nRow).css("width", "80px");
                $('td:eq(6)', nRow).css("width", "100px");
                $('td:eq(7)', nRow).css("width", "100px");
                $('td:eq(8)', nRow).css("width", "100px");
                //$('td:eq(8)', nRow).css("width", "100px");
                //$('td:eq(9)', nRow).css("width", "10px");
            }
        });
        new $.fn.dataTable.FixedHeader(tblOBLAmendmentDtl);
    });
</script>
