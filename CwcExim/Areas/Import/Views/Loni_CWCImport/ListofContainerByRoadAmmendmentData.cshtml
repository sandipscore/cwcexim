    $(document).ready(function () {
        var tblRegDtl = $('#tblRegDtl').DataTable({
            "autoWidth": false,
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                       { "sName": "SL No","width": "10px" },
                       { "sName": "Amendment No", "bSortable": false ,"width":"100px"},
                       { "sName": "Amendment Date", "bSortable": false ,"width":"100px"},
