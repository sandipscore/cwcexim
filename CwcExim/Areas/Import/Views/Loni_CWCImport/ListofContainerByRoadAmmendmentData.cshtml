@model IEnumerable<CwcExim.Areas.Import.Models.ppg_ContainerAmendment>
<table class="table table-striped table-bordered" id="tblRegDtl" style="width:100%;">
    <thead>
        <tr>
            <th style="width:10px" rowspan='2' class="text-center">@Html.DisplayName("SL No")</th>
            <th style="width:100px" rowspan='2'>Amendment No</th>
            <th style="width:80px" rowspan='2'>Amendment Date</th>
            <th style="width:100px" rowspan='2'>Container No</th>
            <th style="width:200px" colspan='2' class="text-center">OLD</th>
            <th style="width:200px" colspan='2' class="text-center">NEW</th>

        </tr>
        <tr>
            <th style="width:100px" class="text-center">Container Size</th>
            <th style="width:100px" class="text-center">Shipping Line Name</th>

            <th style="width:100px" class="text-center">Container Size</th>
            <th style="width:100px" class="text-center">Shipping Line Name</th>

        </tr>
    </thead>
    <tbody>
        @{ var SerialNo = 1;
            foreach (var data in Model)
            {
                <tr>
                    <td style="width:10px" class="text-center">@SerialNo.ToString()</td>
                    <td style="width:100px">@data.AmendNo</td>
                    <td style="width:80px">@data.AmendDate</td>
                    <td style="width:100px">@data.ContainerNo</td>

                    <td style="width:100px" class="text-center">@data.OldContainerSize</td>
                    <td style="width:100px" class="text-center">@data.OldShippingLineName</td>

                    <td style="width:100px" class="text-center">@data.newContainerSize</td>
                    <td style="width:100px" class="text-center">@data.NewShippingLineName</td>

                </tr>
                SerialNo++;
            }
        }
    </tbody>
</table>
