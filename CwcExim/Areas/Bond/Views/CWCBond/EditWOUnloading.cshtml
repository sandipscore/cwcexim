{
    <input type="hidden" id="hdnCfsCodes" value="" />
}

<script src="~/Areas/Bond/Scripts/App/Controllers/KolBondUnloadingCtrl.js"></script>
<script>
    angular.bootstrap(document.getElementById('BndUnldAppDiv'), ['CWCApp']);
</script>

@using (Ajax.BeginForm("AddEditWOUnloading", "CWCBond", new AjaxOptions { Confirm = "Are you sure you want to Save?", HttpMethod = "POST", OnSuccess = "UnloadingOnSuccess", OnFailure = "UnloadingOnFailure" }))
{
    <div id="BndUnldAppDiv">
        <div ng-controller="KolBondUnloadingCtrlEdit">
            <div class="container-fluid">
                <div class="col-md-offset-0-5 col-md-11">
                    <div class="Head_h4">

