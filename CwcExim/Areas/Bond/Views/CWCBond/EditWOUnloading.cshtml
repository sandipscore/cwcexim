                            @Html.HiddenFor(m => m.GodownId)
                            @Html.HiddenFor(m => m.SpaceAppId)
                            @*@Html.HiddenFor(m => m.BondWOId)*@
                            @Html.HiddenFor(m => m.CfsCodes)
                            @Html.AntiForgeryToken()
