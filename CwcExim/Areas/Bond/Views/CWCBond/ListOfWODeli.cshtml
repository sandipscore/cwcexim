@model IEnumerable<CwcExim.Areas.Bond.Models.ListOfBondWODeli>
<table class="table table-striped table-bordered" id="tblWODeli" style="width:100%;">
    <thead>
        <tr>
            <th class="text-center">@Html.DisplayName("SL No")</th>
            <th>@Html.DisplayNameFor(m => m.WorkOrderNo)</th>
            <th>@Html.DisplayNameFor(m=>m.WorkOrderDate)</th>
            <th>@Html.DisplayNameFor(m => m.BondBOENo)</th>
            <th>@Html.DisplayNameFor(m => m.BondBOEDate)</th>
            <th>@Html.DisplayNameFor(m => m.SacNo)</th>
            <th class="text-center">@Html.DisplayName("Edit")</th>
            <th class="text-center">@Html.DisplayName("View")</th>
        </tr>
    </thead>
    <tbody>
        @{ var SerialNo = 1;
            foreach (var data in Model)
            {
                <tr>
                    <td class="text-center">@SerialNo.ToString()</td>
                    <td>@data.WorkOrderNo</td>
                    <td>@data.WorkOrderDate</td>
                    <td>@data.BondBOENo</td>
                    <td>@data.BondBOEDate</td>
                    <td>@data.SacNo</td>
                    <td class="text-center"><a href="#" onclick="EditBondWO(@data.BondWOId)"><i class="fa fa-pencil-square Edit"></i></a></td>
                    <td class="text-center"><a href="#" onclick="ViewBondWO(@data.BondWOId)"><i class="fa fa-search-plus Edit"></i></a></td>
                </tr>
                SerialNo++;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var tblWODeli = $('#tblWODeli').DataTable({
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                       { "sName": "SL No","width": "10%" },
                       { "sName": "WorkOrderNo", "bSortable": false },
                       { "sName": "WorkOrderDate", "bSortable": false },
                       { "sName": "BondBOENo", "bSortable": false },
                       { "sName": "BondBOEDate", "bSortable": false },
                       { "sName": "SacNo", "bSortable": false },
                       { "sName": "Edit", "bSortable": false, "width": "10%" },
                       { "sName": "View", "bSortable": false, "width": "10%" },
                       //{ "sName": "PrintPreview", "bSortable": false, "width": "10%" },

            ]
        });
        new $.fn.dataTable.FixedHeader(tblWODeli);
    });
    function EditBondWO(BondWOId)
    {
        $('#DivBody').load('/Bond/CWCBond/EditWODeli?BondWOId=' + BondWOId);
    }
    function ViewBondWO(BondWOId)
    {
        $('#DivBody').load('/Bond/CWCBond/ViewWODeli?BondWOId=' + BondWOId);
    }
</script>
