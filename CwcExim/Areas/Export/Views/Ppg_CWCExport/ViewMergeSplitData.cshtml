@model IEnumerable<CwcExim.Areas.Export.Models.Ppg_Amendment>

<div class="row Form_Space_top">
    <div class="col-md-3">
        <div class="form-group">
            <label>Amendment No:</label>
        </div>
        @Html.TextBox("AmendmentNo", Model.First().AmendmentNo, new { @readonly = true })
    </div>
    <div class="col-md-3 col-md-offset-6">
        <div class="form-group">
            <label>Invoice No:</label>
        </div>
        @Html.TextBox("InvoiceNo", Model.Last().InvoiceNo, new { @readonly = true })
    </div>
</div>

<div class="row Form_Space_top">
    <div class="col-md-3">
        <div class="form-group">
            <label>Date:</label>
        </div>
        <div class="position-relative Date_Img">
            @Html.TextBox("AmendmentDate", Model.First().AmendmentDate, new { @readonly = true })
        </div>
    </div>
    <div class="col-md-3 col-md-offset-6">
        <div class="form-group">
            <label>Invoice Date:</label>
        </div>
        <div class="position-relative Date_Img">
            @Html.TextBox("InvoiceDate", Model.Last().InvoiceDate, new { @readonly = true })
        </div>
    </div>
</div>

<div class="Head_h4" style="margin-top:10px!important;">
    <div class="row">
        <div class="col-md-12">
            <h4 style="font-size: 16px;">Old Ship Bill Information</h4>
        </div>
    </div>
    <div class="row">
        <div class="form-group Form_Input">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped dataTable" style="width:100%; margin-top:10px!important;">
                    <thead>
                        <tr>
                            <th class="text-center">Ship Bill No</th>
                            <th>Ship Bill Date</th>
                            <th>Party</th>
                            <th>Commodity</th>
                            <th>Weight</th>
                            <th>Pkg</th>
                            <th>Area</th>
                            <th>FOB Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Type == "OLD")
                            {
                                <tr>
                                    <td>@item.ShipBillNo</td>
                                    <td>@item.ShipBillDate</td>
                                    <td>@item.Exporter</td>
                                    <td>@item.Cargo</td>
                                    <td>@item.Weight</td>
                                    <td>@item.Pkg</td>
                                    <td>@item.Area</td>
                                    <td>@item.FOBValue</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
<div class="Head_h4" style="margin-top:10px!important;">
    <div class="row">
        <div class="col-md-12">
            <h4 style="font-size: 16px;">New Ship Bill Information</h4>
        </div>
    </div>
    <div class="row">
        <div class="form-group Form_Input">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped dataTable" style="width:100%; margin-top:10px!important;">
                    <thead>
                        <tr>
                            <th class="text-center">Ship Bill No</th>
                            <th>Ship Bill Date</th>
                            <th>Party</th>
                            <th>Commodity</th>
                            <th>Weight</th>
                            <th>Pkg</th>
                            <th>Area</th>
                            <th>FOB</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Type == "NEW")
                            {
                                <tr>
                                    <td>@item.ShipBillNo</td>
                                    <td>@item.ShipBillDate</td>
                                    <td>@item.Exporter</td>
                                    <td>@item.Cargo</td>
                                    <td>@item.Weight</td>
                                    <td>@item.Pkg</td>
                                    <td>@item.Area</td>
                                    <td>@item.FOBValue</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-left">
    <input type="button" id="btnBack" class="btn btn-primary btn-100px" value="Back" onclick="$('#DivBody').load('/Export/Ppg_CWCExport/Amendment')">
</div>