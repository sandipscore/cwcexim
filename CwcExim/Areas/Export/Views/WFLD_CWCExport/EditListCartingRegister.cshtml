    $(document).ready(function () {
        var tblRegisterDtl = $('#tblRegisterDtl').DataTable({
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                       { "sName": "SL No","width": "8%" },
                       { "sName": "CartingRegisterNo", "bSortable": false },
                       { "sName": "RegisterDate", "bSortable": false },
                       { "sName": "ApplicationNo", "bSortable": false },
