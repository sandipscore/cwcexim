                    }
                }
            });
        }

        $("#SBNoModal").modal("hide");
        $('[data-valmsg-for="SBNo"]').html('<span></span>');
    }
   

    function SBNoModalClose() {
        $("#SBNoModal").modal("hide");
        $('#SBNobox').val('');
