    function selectSBNo(id) {
        debugger;
        $('#SBNo').val(id);
        if ($('#SBNo').val() > 0) {

            $.ajax({
                url: '/Export/Kol_CWCExport/GetLoadedSBNoBySBNo',
                type: 'Get',
                data: { SBNo: $('#SBNo').val() },
                async: false,
                success: function (data) {
                    if (data != null) {
                        debugger;
                     
                        $('#SBNo').val(data.SBNo);
