    function AdjustAmount(InvoiceId)
    {
        debugger;

        var rawJsonCashReceiptList = JSON.parse($('#CashReceiptInvoiveMappingListJson').val());
        var item = {};
        if ($('#chk_' + InvoiceId).is(":checked")) {
            debugger;
            for (var i = 0; i < rawJsonCashReceiptList.length; i++) {
                if (rawJsonCashReceiptList[i].InvoiceId == InvoiceId) {
                    item = rawJsonCashReceiptList[i];
                    item.AdjustmentAmt = parseFloat($('#AdjustmentAmt_' + InvoiceId).val());
                    if (isNaN(item.AdjustmentAmt)) item.AdjustmentAmt = 0.00;

                    $('#AdjustmentAmt_' + InvoiceId).val(parseFloat(item.AdjustmentAmt).toFixed(2));

                    if (item.AdjustmentAmt > item.InvoiceAmt) {
                        var chkId = 'chk_' + InvoiceId;
                        item.AdjustmentAmt = 0;
                        $('#AdjustmentAmt_' + InvoiceId).val(parseFloat(item.AdjustmentAmt).toFixed(2));

                        document.getElementById(chkId).checked = false;
                        AdjustAmount(InvoiceId);
                    }
                    else {
                        var dueAmount = item.DueAmt;
                        item.DueAmt = parseFloat(dueAmount);

                       $('#DueAmt_' + InvoiceId).val(parseFloat(item.DueAmt - item.AdjustmentAmt).toFixed(2));

                        //item.InvoiceAmt = parseFloat($('#InvoiceAmt_' + InvoiceId).val());
                        //$('#DueAmt_' + InvoiceId).val(parseFloat(item.InvoiceAmt - item.AdjustmentAmt).toFixed(2));
                    }

                }
                else {
                    item = rawJsonCashReceiptList[i];
                    item.AdjustmentAmt = parseFloat($('#AdjustmentAmt_' + rawJsonCashReceiptList[i].InvoiceId).val());
                    item.DueAmt = parseFloat($('#DueAmt_' + rawJsonCashReceiptList[i].InvoiceId).val());

                }
            }

        }
        else {
            debugger;
            for (var i = 0; i < rawJsonCashReceiptList.length; i++) {
                if (rawJsonCashReceiptList[i].InvoiceId == InvoiceId) {

                    item = rawJsonCashReceiptList[i];
