    var SelectedCashReceiptList = [];


    function CashReceiptChecked(InvoiceId) {
        debugger;

        $("#TdsAmount").removeAttr("readonly")

        var rawJsonCashReceiptList = JSON.parse($('#CashReceiptInvoiveMappingListJson').val());
        var item = {};
        if ($('#chk_' + InvoiceId).is(":checked")) {
            debugger;
            for (var i = 0; i < rawJsonCashReceiptList.length; i++) {
                if (rawJsonCashReceiptList[i].InvoiceId == InvoiceId) {
                    item = rawJsonCashReceiptList[i];
                    item.AdjustmentAmt = item.DueAmt;
                    $('#DueAmt_' + InvoiceId).val(0);
                    $('#AdjustmentAmt_' + InvoiceId).val(parseFloat(item.DueAmt).toFixed(2));


                }
                else
                {
                    item = rawJsonCashReceiptList[i];
                    item.AdjustmentAmt = parseFloat($('#AdjustmentAmt_' + rawJsonCashReceiptList[i].InvoiceId).val());

                }
            }


        }
        else {
            debugger;
            for (var i = 0; i < rawJsonCashReceiptList.length; i++) {
                if (rawJsonCashReceiptList[i].InvoiceId == InvoiceId) {

                    item = rawJsonCashReceiptList[i];
                    item.AdjustmentAmt = 0;
                    $('#DueAmt_' + InvoiceId).val(parseFloat(item.DueAmt).toFixed(2));
                    $('#AdjustmentAmt_' + InvoiceId).val('0.00');
                }
                else
                {
                    item = rawJsonCashReceiptList[i];
                    item.AdjustmentAmt = parseFloat($('#AdjustmentAmt_' + rawJsonCashReceiptList[i].InvoiceId).val());
                }
            }

        }

        var TotalValue = 0;
        var RoundUp = 0;
        for (var i = 0; i < rawJsonCashReceiptList.length; i++) {
            TotalValue = TotalValue + parseFloat(rawJsonCashReceiptList[i].AdjustmentAmt);
            RoundUp = RoundUp + parseFloat(rawJsonCashReceiptList[i].RoundUp);
        }


        $('#TotalValue').val(parseFloat(Math.ceil(TotalValue)).toFixed(2));
        $('#RoundUp').val(parseFloat(RoundUp).toFixed(2));
        $('#TotalPayableAmt').val(parseFloat(Math.ceil(TotalValue)).toFixed(2));

        var remainingValue = parseFloat(Math.ceil($('#BalOnAccount').val())) - TotalValue;

        $('#RemainingOnAccountBal').val(parseFloat(remainingValue).toFixed(2));

        var flagalltrue = 0;
        var flagallfalse = 0;


        $.each(rawJsonCashReceiptList, function (i, item) {
            if ($('#chk_' + item.InvoiceId).is(":checked")) {
                flagalltrue++;
            }

        });

        if (flagalltrue == rawJsonCashReceiptList.length)
        {
            $('#chk_AllInvoice').prop('checked', true);
        }
        else {
            $('#chk_AllInvoice').prop('checked', false);
        }



    }


