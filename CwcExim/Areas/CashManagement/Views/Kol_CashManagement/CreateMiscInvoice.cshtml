@Scripts.Render("~/bundles/jqueryval")

<div id="PartyModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content popup_modal">
            <div class="modal-header popup_header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button>
                <h4 class="modal-title">List of Party</h4>
            </div>
            <div class="modal-body popup_body">
                <input placeholder="Search Me" id="Partybox" type="text" />
                <ul class="navList" id="lstParty">
                    @{
                        if (ViewBag.PaymentParty != null)
                        {
                            foreach (var item in ViewBag.PaymentParty)
                            {
                                <li id="@item.PartyId" onclick="selectParty('@item.PartyId','@item.PartyName','@item.GSTNo','@item.Address','@item.State','@item.StateCode')">@item.PartyName  - @item.PartyAlias</li>
                            }
                        }
                    }
                </ul>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-offset-6 col-md-6">
                        <button type="button" class="btn log_Btn_sm" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="PayeeModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content popup_modal">
            <div class="modal-header popup_header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button>
                <h4 class="modal-title">List of Payer</h4>
            </div>
            <div class="modal-body popup_body">
                <input placeholder="Search Me" id="Payeebox" type="text" />
                <ul class="navList" id="lstPayee">
                    @{
                        if (ViewBag.PaymentPayer != null)
                        {
                            foreach (var item in ViewBag.PaymentPayer)
                            {
                                <li id="@item.PartyId" onclick="selectPayee('@item.PartyId','@item.PartyName')">@item.PartyName - @item.PartyAlias</li>
                            }
                        }
                    }
                </ul>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-offset-6 col-md-6">
                        <button type="button" class="btn log_Btn_sm" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var partytype = 5;

    function IVParty(ptype) {
        if (ptype == "Importer") {
            partytype = 1;
        }
        else if (ptype == "Exporter") {
            partytype = 2;
        }
        else if (ptype == "CHA") {
            partytype = 3;
        }

        else if (ptype == "Ledger") {
            partytype = 4;
        }

        else if (ptype == "All") {
            partytype = 5;
        }



        $('#PartyName').val('');

        $('#GSTNo').val('');
        $('#PayeeName').val('');

        $.ajax({
            url: '/CashManagement/Kol_CashManagement/LoadPartyonSelection',
            type: 'GET',
            data: { PTYpe: partytype },
            success: function (data) {
                debugger;
                if (data.Status == 1) {
                    //debugger;
                    var html = '';

                    $.each(data.Data, function (item, elem) {

                        debugger;
                        html += '<li  onclick="selectParty(' + elem.PartyId + ',&quot;' + elem.PartyName + '&quot;,&quot;' + elem.GSTNo + '&quot;,&quot;' + elem.Address + '&quot;,&quot;' + elem.State + '&quot;,&quot;' + elem.StateCode + '&quot;);" >' + elem.PartyName + ' - ' + elem.PartyAlias + '</li>';

                    });
                    $('#lstParty').html(html);
                }
            }
        });

    }
    $(document).ready(function () {
        $('#DeliveryDate').datepicker({
            dateFormat: "dd/mm/yy",
            showOn: "button",
            buttonImage: "/Content/images/calendar.png",
            buttonImageOnly: true,
            buttonText: "Select date",
            changeMonth: true,
            changeYear: true,
            showAnima: "fadein",
            onClose: function () {
            }
        });

        $('#InvoiceDate').datepicker({
            dateFormat: "dd/mm/yy",
            showOn: "button",
            buttonImage: "/Content/images/calendar.png",
            buttonImageOnly: true,
            buttonText: "Select date",
            changeMonth: true,
            changeYear: true,
            showAnima: "fadein",
            onClose: function () {
            }
        });
    });
    $('#Partybox').keyup(function () {
        var val = $(this).val().toLowerCase();
        if (val == "")
            $('#lstParty > li').show();
        else {
            $('#lstParty > li').each(function () {
                var text = $(this).text().toLowerCase();
                (text.indexOf(val) >= 0 ? $(this).show() : $(this).hide());
            });
        }
    });
    $('#Payeebox').keyup(function () {
        var val = $(this).val().toLowerCase();
        if (val == "")
            $('#lstPayee > li').show();
        else {
            $('#lstPayee > li').each(function () {
                var text = $(this).text().toLowerCase();
                (text.indexOf(val) >= 0 ? $(this).show() : $(this).hide());
            });
        }
    });
    function selectParty(PartyId, PartyName, GSTNo, Address, State, StateCode) {
        debugger;
        $('#PartyId').val(PartyId);
        $('#PartyName').val(PartyName);
        $('#GSTNo').val(GSTNo);
        $('#hdnAddress').val(Address);
        $('#hdnState').val(State);
        $('#hdnStateCode').val(StateCode);
        if ($('#MiscInvModelJson').val() != null && $('#MiscInvModelJson').val() != '' && $('#MiscInvModelJson').val() != 'undefined') {
            var rawJson = JSON.parse($('#MiscInvModelJson').val());
            rawJson.PartyId = $('#PartyId').val();
            rawJson.PartyName = $('#PartyName').val();
            rawJson.PartyGST = $('#GSTNo').val();
            $('#MiscInvModelJson').val(JSON.stringify(rawJson));
        }
        document.getElementById("ErrPartyName").innerHTML = "";
        var PayeeJson = JSON.parse($('#hdnPayee').val());

        var Payee = $.grep(PayeeJson, function (item) { return item.PartyId == PartyId; })[0];
        if (typeof (Payee) == 'undefined') {
        }
        else {
            $('#PayeeId').val(PartyId);
            $('#PayeeName').val(PartyName);
        }
        $("#PartyModal").modal("hide");
    }
    function selectPayee(PartyId, PartyName) {
        $('#PayeeId').val(PartyId);
        $('#PayeeName').val(PartyName);
        $("#PayeeModal").modal("hide");
    }
    var TaxType = '@ViewData["InvType"].ToString()';
    function IVType(Type) {
        TaxType = Type;
        $('#DivBody').load('/CashManagement/Kol_CashManagement/CreateMiscInvoice?type=' + Type);
    }
    if (TaxType == 'Tax')
        $('#Tax').prop('checked', true);
    else {
        $('#Bill').prop('checked', true);
        $('#cgst').val(0);
        //$('#cgst').prop('readonly', true);
        $('#sgst').val(0);
        //$('#sgst').prop('readonly', true);
        $('#IGST').val(0);
        //$('#IGST').prop('readonly', true);
    }
    $('#Purpose').change(function () {
        debugger;
        if ($('#PartyName').val() == '') {
            $('#ErrPartyName').html('Fill Out This Field');
            $('#Purpose').val("");
            return false;
        }
        if ($('#PayeeName').val() == '') {
            $('#ErrPayeeName').html('Fill Out This Field');
            $('#Purpose').val("");
            return false;
        }

        var PurValue = $("#Purpose option:selected").text();
        var SacCode = $('#Purpose').val();
        $('#PurposeCharge').val(PurValue);
        $('#PurposeCode').val(SacCode);

        $('#ErrPartyName,#ErrPayeeName,#ErrPurpose').html('');
        $('#Sac').val(SacCode);
        if ($('#PurposeCharge').val() != '') {
            if ($('#PurposeCharge').val() == "De Stuffing  of Import Cargo in to the Container") {
                if ($('#Size').val() == '') {
                    alert("Please select Size when Destuffing Charges");
                    $('#Purpose').val('');
                    $('#Sac').val('');
                    $('#SacCode').val('');

                    return false;
                }
            }

            $('#Sac').val(SacCode);
            $('#SacCode').val(SacCode);
            $('#SacGst').val(0);
        }
        else {
            $('#Sac').val('');
            $('#SacCode').val('');
            $('#SacGst').val('');
        }

        getAmount(PurValue);

        // caltotal();
    });
    $('#Sac').change(function () {
        debugger;
        if ($('#PartyName').val() == '') {
            $('#ErrPartyName').html('Fill Out This Field');
            $('#Purpose').val("");
            return false;
        }
        if ($('#PayeeName').val() == '') {
            $('#ErrPayeeName').html('Fill Out This Field');
            $('#Purpose').val("");
            return false;
        }

        var SacValue = $('#Sac').val().split('-')[0];
        var SacGst = $('#Sac').val().split('-')[1];
        $('#SacCode').val(SacValue);
        $('#SacGst').val(SacGst);

        $('#ErrPartyName,#ErrPayeeName,#ErrPurpose,#ErrSac').html('');

        // caltotal();


    });


    var flagvalue = 0;
    function getAmount(purpose) {

        debugger;
        $.ajax({
            url: '/CashManagement/Kol_CashManagement/GetInvoiceAmount',
            type: 'POST',
            async: false,
            datatype: JSON,
            data: { purpose: purpose, Size: $('#Size').val() },
            success: function (data) {

                debugger;
                if (data != undefined || data != null) {
                    debugger;
                    flagvalue = 1;
                    $('#amount').val(data.Amount);
                    $('#amount').focus();

                }
                else {
                    alert("fail");
                }
            }
        });


        if (flagvalue == 0) {
