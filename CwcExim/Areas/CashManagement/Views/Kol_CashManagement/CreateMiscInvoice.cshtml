                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-1-5 col_cus_2">
                                <label> CGST:</label>
                            </div>
                            <div class="col-md-2">
                                @Html.TextBox("cgst", "", new
                                   { @*@onblur = "return caltax();",*@ @readonly = true,
                                       onkeypress = "return AllowOnlyDecimal(event)",
