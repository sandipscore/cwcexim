@using (Ajax.BeginForm("AddEditMiscInvoice", "Kol_CashManagement", new AjaxOptions { HttpMethod = "POST", OnSuccess = "PaymentOnSuccess", OnFailure = "PaymentOnFailure" }, new { @Id = "MiscInvoice" }))
{
