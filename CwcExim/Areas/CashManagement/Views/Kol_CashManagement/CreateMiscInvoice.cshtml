                    </div>
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-1-5 col_cus_2">
                                <label> Invoice Amount:</label>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBox("InvoiceAmt", "", new { @readonly = true })
                            </div>

                        </div>
                    </div>
                   
                    <div class="row Form_Space_top">
                        <div class="form-group Form_Input">
                            <div class="col-md-1-5 col_cus_2">
