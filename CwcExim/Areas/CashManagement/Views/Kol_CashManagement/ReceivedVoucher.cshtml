        var PostData = new FormData();
        PostData.append("ReceiptId", $('#ReceiptId').val());
            PostData.append("Page1", html1);
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GenerateReceiptVoucher", "Kol_CashManagement", new { area = "CashManagement" })',
                data: PostData,
                processData: false,
                contentType: false,
