                            <div class="form-group Form_Input">
                                <div class="col-md-offset-2 col-md-2">
                                    <button id="btnSave" class="btn log_Btn_sm" ng-click="Save()" ng-disabled="Rights.CanAdd==0 || IsSaveDone">Save</button>
                                </div>
                                <div class="col-md-2">
