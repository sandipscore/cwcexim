                    var URL = '/CashManagement/DSR_CashManagement/GetLoadMoreRevenueStampPurchaseList?PurchaseDate=' + PurchaseDate;

                    $.ajax({
                        url: URL,
                        type: 'GET',
                        dataType: 'JSON',
                        data: { Page: Page + 1, PurchaseDate: PurchaseDate },
                        success: function (data) {
                            debugger;
