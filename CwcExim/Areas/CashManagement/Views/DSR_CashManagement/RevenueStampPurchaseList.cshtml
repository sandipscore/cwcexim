                                Page++;
                                var html = '';
                                var dt = $('#tblRevenueStamp').dataTable();
                                var len = dt.fnGetData().length;
                                $.each(data, function (i, item) {
                                    debugger;
                                    len++;
                                    dt.fnAddData([

                                    len,
