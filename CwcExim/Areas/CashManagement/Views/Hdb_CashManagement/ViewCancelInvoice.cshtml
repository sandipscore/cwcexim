@model CwcExim.Areas.CashManagement.Models.CancelInvoice


  <script>
   
    function ReloadCancelInvoice() {
        $('#DivBody').load('/CashManagement/Hdb_CashManagement/CancelInvoice');
    }

</script>



    <div class="row">
        <div class="col-md-12">
            <div class="Head_h4">
                @using (Ajax.BeginForm("AddEditCancleInvoice", "Hdb_CashManagement", new AjaxOptions { HttpMethod = "POST", OnSuccess = "CancelInvoiceOnSuccess", OnFailure = "CancelInvoiceOnFailure" }, new { @Id = "CancelInvoiceForm" }))

                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.CancelDate)
                    <div id="divCancelInvoice">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Cancel Invoice</h4>
                            </div>
                        </div>
                        <div class="content_wrp">
                            <div class="row Form_Space_top">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Invoice No:</label>
                                    </div>
                                    @Html.HiddenFor(m => m.Irn)
                                    @Html.HiddenFor(m => m.InvoiceId)
                                    @Html.TextBoxFor(m => m.InvoiceNo, new { @readonly = true })

                                </div>
                                <div class="col-md-3 col-md-offset-1">
                                    <div class="form-group">
                                        <label>Invoice Date:</label>
                                    </div>
                                    @Html.TextBoxFor(m => m.InvoiceDate, new { @readonly = true })
                                </div>
                                <div class="col-md-3 col-md-offset-1">
                                    <div class="form-group">
                                        <label>Amount:</label>
                                    </div>
                                    @Html.TextBoxFor(m => m.Amount, new { @readonly = true })
                                </div>
                            </div>
                            <div class="row Form_Space_top">
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <label>Party Name:</label>
                                    </div>
                                    @Html.TextBoxFor(m => m.PartyName, new { @readonly = true })
                                </div>
                                <div class="col-md-3 col-md-offset-1">
                                    <div class="form-group">
                                        <label>Cancel Reason:</label>
                                    </div>
                                    @Html.TextBoxFor(m => m.CancelReason, new { @readonly = true })

                                </div>
                            </div>
                            <div class="row Form_Space_top">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Remarks :</label>
                                    </div>
                                    <div class="position-relative">
                                        @Html.TextAreaFor(m => m.CancelRemarks, new { @style = "height:75px;", @readonly = true })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="stoke SignUp_space_bottom2 SignUp_space_top2"></div>
                            </div>
                                <div class="d-flex justify-content-left">
                                    <input type="button" class="btn btn-primary mr-1 btn-100px" value="Exit" onclick="ReloadCancelInvoice()" />
                                </div>
                        </div>
                    </div>
                        <div class="logSuccMsg" style="background-color:transparent" id="DivCancelInvoiceMsg"></div>
                        <div class="logErrMsg Form_Space_bottom" style="background-color:transparent" id="DivCancelInvoiceErrMsg"></div>
                }
                @Scripts.Render("~/bundles/jqueryval")


            </div>

        </div>
    </div>





