@model CwcExim.Areas.CashManagement.Models.CancelInvoice


  <script>
   
    function ReloadCancelInvoice() {
        $('#DivBody').load('/CashManagement/Ppg_CashManagement/CancelInvoice');
    }

</script>



    <div class="row">
        <div class="col-md-12">
            <div class="Head_h4">
    @using (Ajax.BeginForm("AddEditCancleInvoice", "Ppg_CashManagement", new AjaxOptions { HttpMethod = "POST", OnSuccess = "CancelInvoiceOnSuccess", OnFailure = "CancelInvoiceOnFailure" }, new { @Id = "CancelInvoiceForm" }))

    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.CancelDate)

        <div class="row">
            <div class="col-md-12">
                <h4>Cancel Invoice</h4>
            </div>
        </div>
        <div class="content_wrp">
            <div class="row Form_Space_top">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Invoice No:</label>
                        @Html.HiddenFor(m => m.Irn)
                        @Html.HiddenFor(m => m.InvoiceId)
                        @Html.TextBoxFor(m => m.InvoiceNo, new { @class = "form-control input-sm", @readonly = true })

                    </div>
                </div>
                    <div class="col-md-3 col-md-offset-6">
                        <label>Invoice Date:</label>
                        @Html.TextBoxFor(m => m.InvoiceDate, new { @class = "form-control input-sm", @readonly = true })
                    </div>                
            </div>
            <div class="row Form_Space_top">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Amount:</label>
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control input-sm", @readonly = true })
                    </div>

                </div>
            </div>
            <div class="row Form_Space_top">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Party Name</label>
                        @Html.TextBoxFor(m => m.PartyName, new { @class = "form-control input-sm", @readonly = true })
                    </div>
                </div>
            </div>
            <div class="row Form_Space_top">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Cancel Reason:</label>
                        @Html.TextBoxFor(m => m.CancelReason, new { @class = "form-control input-sm", @readonly = true })
                    </div>

                </div>
            </div>

            <div class="row Form_Space_top">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Remarks :</label>
                        @Html.TextAreaFor(m => m.CancelRemarks, new { @style = "height:75px;", @readonly = true })
                        @Html.ValidationMessageFor(m => m.CancelRemarks, "", new { @class = "Error_Msg" })
                        <span style="color:red" id="ErrCancelRemarks"></span>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="stoke SignUp_space_bottom2 SignUp_space_top2"></div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center">
                    <input type="button" class="btn btn-danger-border btn-100px" value="Exit" onclick="ReloadCancelInvoice()" />
                </div>

            </div>
            <div class="logSuccMsg" style="background-color:transparent" id="DivCancelInvoiceMsg"></div>
            <div class="logErrMsg Form_Space_bottom" style="background-color:transparent" id="DivCancelInvoiceErrMsg"></div>
        </div>
    }
                            @Scripts.Render("~/bundles/jqueryval")


             </div>
                    
        </div>
    </div>





