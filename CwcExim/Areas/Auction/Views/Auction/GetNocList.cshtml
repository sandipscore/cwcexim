
@{
    Layout = null;
}
@model IEnumerable<CwcExim.Areas.Auction.Models.NocDetails>
<table id="TblAuctionNotice" class="table table-striped table-bordered nowrap dataTable" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th style="text-align:center">Edit</th>
            <th style="text-align:center">Delete</th>  
            <th>SL No.</th>
            <th>Noc No</th>
            <th>Noc Date</th>
            <th>Ref No</th>                    
        </tr>
    </thead>
    <tbody>
        @{



            int i = 0;
            foreach (var item in Model)
            {
                i = i + 1;
                <tr>
                    <td style="text-align:center">
                        <div class="table_icon"><a href="#" onclick="EditNocData(@item.NocID)"><i class="fa fa-pencil"></i></a></div>
</td>
                    <td style="text-align:center">
                        <div class="table_icon"><a href="#" onclick="DeleteNocData(@item.NocID)"><i class="fa fa-trash-o"></i></a></div>
</td>
                    <td>@i</td>
                    <td>@Html.DisplayFor(m => item.NocNo) </td>
                    <td>@Html.DisplayFor(m => item.NocDate)</td>
                    <td>@Html.DisplayFor(m => item.RefNo)</td>                    
                </tr>
            }


        }

    </tbody>

</table>
<script>
    $(document).ready(function () {
        var TblAuctionNotice = $('#TblAuctionNotice').DataTable({
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                    { "sName": "Edit", "width": "3%" },
                    { "sName": "Delete", "width": "3%" },
                    { "sName": "SLNo", "width": "5%" },
                    { "sName": "NocNo", "width": "15%" },
                    { "sName": "NocDate", "width": "20%" },
                    { "sName": "RefNo", "width": "20%" }                 
            ]
        });
        new $.fn.dataTable.FixedHeader(TblAuctionNotice);
    });
</script>