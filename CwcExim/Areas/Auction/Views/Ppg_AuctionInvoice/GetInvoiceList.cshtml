@{
    Layout = null;
}
@model IEnumerable<CwcExim.Areas.Auction.Models.AuctionInvoice>


<table id="TblAuctionAssessmentInvoice" class="table table-striped table-bordered nowrap dataTable" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th style="text-align:center;">Print</th>
            <th>SL No.</th>
            <th>Invoice No</th>
            <th>Invoice Date</th>
            <th>Party</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    i = i + 1;
                    <tr>
                        <td style="text-align:center">
                            <div class="table_icon"><a href="#" onclick="PrintList('@item.InvoiceNo')"><i class="fa fa-print"></i></a></div>
                        </td>
                        <td>@i</td>
                        <td>@Html.DisplayFor(m => item.InvoiceNo)</td>
                        <td>@Html.DisplayFor(m => item.InvoiceDate)</td>
                        <td>@Html.DisplayFor(m => item.PartyName)</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var TblAuctionNotice = $('#TblAuctionAssessmentInvoice').DataTable({
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                    { "sName": "Print", "bSortable": false, "width": "3%" },
                    { "sName": "SLNo", "width": "7%" },
                    { "sName": "Invoice No", "width": "15%" },
                    { "sName": "Invoice Date" },
                    { "sName": "Party", "bSortable": false, "width": "40%" }                    
            ]
        });
        new $.fn.dataTable.FixedHeader(TblAuctionNotice);
    });
</script>