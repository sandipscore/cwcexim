@{
    Layout = null;
}
@model IEnumerable<CwcExim.Areas.Auction.Models.HDB_DestructionViewModel>

<style>
    .icons a{
        padding: 8px;
    }
</style>
<table id="TblAuctionNotice" class="table table-striped table-bordered nowrap dataTable" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>SL No.</th>
            <th>Obl No.</th>
            <th>Shipping Bill No.</th>
            <th>Container No.</th>
            <th>Custom Gate Pass No.</th>
            <th>Delivery Date</th>
            <th>Print/Edit/View/Delete</th>
        </tr>
    </thead>
    <tbody>
        @{

            if (Model != null)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    i = i + 1;
                <tr>
                    <td>@i</td>
                    <td>@Html.DisplayFor(m => item.OBL)</td>
                    <td>@Html.DisplayFor(m => item.Shipbill)</td>
                    <td>@Html.DisplayFor(m => item.ContainerNo)</td>
                    <td>@Html.DisplayFor(m => item.CustomGatePassNo)</td>
                    <td>@Html.DisplayFor(m => item.DestructionDate)</td>
                    <td class="icons">
                        <a href="#" onclick="PreviewDestruction(@item.DestructionID)"><i class="fa fa-file-pdf-o Edit"></i></a>|
                        <a href="#" onclick="EditDestruction(@item.DestructionID)"><i class="fa fa-pencil-square Edit"></i></a>|
                        <a href="#" onclick="ViewDestruction(@item.DestructionID)"><i class="fa fa-search-plus Edit"></i></a>|
                        <a href="#" onclick="DeleteDestruction(@item.DestructionID)"><i class="fa fa-window-close-o Delete"></i></a>                       
                    </td>

                </tr>
                    }
                }

            }

    </tbody>

</table>
<script>
    $(document).ready(function () {
        var TblAuctionNotice = $('#TblAuctionNotice').DataTable({
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                    { "sName": "SLNo", "width": "7%" },
                    { "sName": "Obl No.", "width": "15%" },
                    { "sName": "Shipping Bill No." },
                    { "sName": "Container No." },
                      { "sName": "Custom Gate Pass No." },
                        { "sName": "Delivery Date" },
                          { "sName": "Print/Edit/View/Delete" }

            ]
        });
        new $.fn.dataTable.FixedHeader(TblAuctionNotice);
    });


</script>