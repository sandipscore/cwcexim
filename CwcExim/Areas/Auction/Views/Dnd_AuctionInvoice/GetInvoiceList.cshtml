@{
    Layout = null;
}
@model IEnumerable<CwcExim.Areas.Auction.Models.Dnd_AuctionInvoice>


<table id="TblAuctionAssessmentInvoice" class="table table-striped table-bordered nowrap dataTable" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>SL No.</th>
            <th>Invoice No</th>
            <th>Invoice Date</th>           
            <th>Party</th>
            <th style="text-align:center;">Print</th>
        </tr>
    </thead>
    <tbody>
        @{



            int i = 0;
            if (Model != null)
            {


                foreach (var item in Model)
                {
                    i = i + 1;
                <tr>
                    <td>@i</td>
                    <td>@Html.DisplayFor(m => item.InvoiceNo)</td>
                    <td>@Html.DisplayFor(m => item.InvoiceDate)</td>                  
                    <td>@Html.DisplayFor(m => item.PartyName)</td>
                    <td style="text-align:center">
                        <a href="#" onclick="PrintList('@item.InvoiceNo')"><i class="fa fa-print Edit"></i></a>
                    </td>

                </tr>
                    }
                }
            }


    </tbody>

</table>
<script>
        $(document).ready(function () {
            var TblAuctionNotice = $('#TblAuctionAssessmentInvoice').DataTable({
                "bFilter": false,
                "bInfo": false,
                "aoColumns": [
                        { "sName": "SLNo", "width": "7%" },
                        { "sName": "Invoice No", "width": "15%" },
                        { "sName": "Invoice Date" },                        
                        { "sName": "Party", "bSortable": false, "width": "40%" },
                        { "sName": "Print", "bSortable": false, "width": "10%" }
                ]
            });
            new $.fn.dataTable.FixedHeader(TblAuctionNotice);
        });
</script>