@model IEnumerable<CwcExim.Areas.Auction.Models.AucBidFinalizationHdr>
    <style>
        #tblBidFinalizationList{
            table-layout: fixed;
        }
        #tblBidFinalizationList tr td{
            word-break: break-word;
        }
        table.dataTable.nowrap th{
            white-space: normal;
        }
    </style>
<table id="tblBidFinalizationList" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Edit</th>
            <th>View</th>
            <th>Delete</th>
            <th style="text-align:center;">SL No.</th>
            <th>BID No.</th>
            <th>OBL No.</th>
            <th>Shipping Bill No.</th>
            <th>Container No.</th>
            <th>Auction Date</th>
            <th>Party Name</th>
            <th>BID Amount</th>
            <th>EMD Amount</th>            
        </tr>
    </thead>
    <tbody>
        @{
            var SerialNo = 1;
            foreach (var elem in Model)
            {
                <tr>
                    <td style="text-align:center"><div class="table_icon"><a href="#" onclick="EditBIDData(@elem.BidIdHdr)"><i class="fa fa-pencil"></i></a></div></td>
                    <td style="text-align:center"><div class="table_icon"><a href="#" onclick="ViewBIDData(@elem.BidIdHdr)"><i class="fa fa-eye"></i></a></div></td>
                    <td style="text-align:center"><div class="table_icon"><a href="#" onclick="DeleteBIDData(@elem.BidIdHdr)"><i class="fa fa-trash-o"></i></a></div></td>
                    <td style="text-align:center;">@SerialNo.ToString()</td>
                    <td>@elem.BidNo</td>
                    <td>@elem.OBL</td>
                    <td>@elem.Shipbill</td>
                    <td>@elem.Container</td>
                    <td>@elem.AuctionDate</td>
                    <td>@elem.Party</td>
                    <td>@elem.BidAmount</td>
                    <td>@elem.EmdAmount</td>                    
                </tr>
                SerialNo = SerialNo + 1;
            }
        }
    </tbody>
</table>
<script>

    $(document).ready(function () {
        var BidListHdr = $('#tblBidFinalizationList').DataTable({
            "bFilter": false,
            "bInfo": false,
            "ordering": false,
            "aoColumns": [
                { "sName": "Edit", "width": "3%" },
                { "sName": "View", "width": "3%" },
                { "sName": "Delete", "width": "3%" },
                { "sName": "SL No", "width": "5%" },
                { "sName": "BID No.", "width": "10%" },
                { "sName": "OBL No." },
                { "sName": "Shipping Bill No." },
                { "sName": "Container No." },
                { "sName": "Auction Date" },
                { "sName": "Party Name" },
                { "sName": "BID Amount" },
                { "sName": "EMD Amount" }              
            ]
        });
        new $.fn.dataTable.FixedHeader(BidListHdr);
    });

   

</script>
