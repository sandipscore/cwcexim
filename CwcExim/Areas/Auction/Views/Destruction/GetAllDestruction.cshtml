@{
    Layout = null;
}
@model IEnumerable<CwcExim.Areas.Auction.Models.DestructionViewModel>

<style>
    .icons a {
        padding: 8px;
    }
</style>
<table id="TblAuctionNotice" class="table table-striped table-bordered nowrap dataTable" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Edit</th>
            <th>View</th>
            <th>Print</th>
            <th>Delete</th>
            <th>SL No.</th>
            <th>Obl No.</th>
            <th>Shipping Bill No.</th>
            <th>Container No.</th>
            <th>Custom Gate Pass No.</th>
            <th>Delivery Date</th>
        </tr>
    </thead>
    <tbody>
        @{



            int i = 0;
            foreach (var item in Model)
            {
                i = i + 1;
                <tr>
                    <td>
                        <div class="table_icon"><a href="#" onclick="EditDestruction(@item.DestructionID)"><i class="fa fa-pencil"></i></a></div>
                    </td>
                    <td>
                        <div class="table_icon"><a href="#" onclick="ViewDestruction(@item.DestructionID)"><i class="fa fa-eye"></i></a></div>
                    </td>
                    <td>
                        <div class="table_icon"><a href="#" onclick="PreviewDestruction(@item.DestructionID)"><i class="fa fa-print"></i></a></div>
                    </td>
                    <td>
                        <div class="table_icon"><a href="#" onclick="DeleteDestruction(@item.DestructionID)"><i class="fa fa-trash-o"></i></a></div>
                    </td>
                    <td>@i</td>
                    <td>@Html.DisplayFor(m => item.OBL)</td>
                    <td>@Html.DisplayFor(m => item.Shipbill)</td>
                    <td>@Html.DisplayFor(m => item.ContainerNo)</td>
                    <td>@Html.DisplayFor(m => item.CustomGatePassNo)</td>
                    <td>@Html.DisplayFor(m => item.DestructionDate)</td>
                </tr>
            }


        }

    </tbody>

</table>
<script>
    $(document).ready(function () {
        var TblAuctionNotice = $('#TblAuctionNotice').DataTable({
            "bFilter": false,
            "bInfo": false,
            "aoColumns": [
                    { "sName": "Edit", "width": "3%" },
                    { "sName": "View", "width": "3%" },
                    { "sName": "Print", "width": "3%" },
                    { "sName": "Delete", "width": "3%" },
                    { "sName": "SLNo", "width": "7%" },
                    { "sName": "Obl No.", "width": "15%" },
                    { "sName": "Shipping Bill No." },
                    { "sName": "Container No." },
                    { "sName": "Custom Gate Pass No." },
                    { "sName": "Delivery Date" },                    
            ]
        });
        new $.fn.dataTable.FixedHeader(TblAuctionNotice);
    });


</script>